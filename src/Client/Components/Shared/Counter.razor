<div class="flex justify-between w-full gap-2">
    <div class="flex justify-center items-center min-w-9 border-solid border-second border rounded-lg text-sm select-none hover:cursor-pointer hover:shadow-md" @onclick="OnMinusClick">-</div>
    <div class="flex justify-center items-center w-full h-9 bg-background rounded-lg text-sm">@ChildContent</div>
    <div class="flex justify-center items-center min-w-9 border-solid border-second border rounded-lg text-sm select-none hover:cursor-pointer hover:shadow-md" @onclick="OnPlusClick">+</div>
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    [Parameter]
    public EventCallback OnMinusClick { get; set; }
    
    [Parameter]
    public EventCallback OnPlusClick { get; set; }
}